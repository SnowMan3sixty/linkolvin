{% extends 'base.html.twig' %}

{% block title %}Oferta{% endblock %}

{% block body %}
    <h1>Oferta</h1>

    <table class="table" style="text-align: left">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ofertum.id }}</td>
            </tr>
            <tr>
                <th>Titol</th>
                <td>{{ ofertum.titol }}</td>
            </tr>
            <tr>
                <th>Descripcio</th>
                <td>{{ ofertum.descripcio }}</td>
            </tr>
            <tr>
                <th>DataPublicacio</th>
                <td>{{ ofertum.dataPublicacio ? ofertum.dataPublicacio|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Ubicacio</th>
                <td>{{ ofertum.ubicacio }}</td>
            </tr>
            <tr>
                <th>Estat</th>
                <td>{{ ofertum.estat }}</td>
            </tr>
        </tbody>
    </table>

    <br>
    <br>
    <a href="{{ path('oferta_index') }}">Volver</a>
    <br>
    <br>
    <a href="{{ path('oferta_edit', {'id': ofertum.id}) }}">Editar</a>
    <br>
    <br>
    {{ include('oferta/_delete_form.html.twig') }}
{% endblock %}
