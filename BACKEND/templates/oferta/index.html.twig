{% extends 'base.html.twig' %}

{% block title %}Tus ofertas
{% endblock %}

{% block body %}
{% if 'ROLE_COMPANY' in app.user.getroles(true)  %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Linkolvin EMPRESA</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="http://localhost:8080">Index</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('oferta_index') }}">Mis ofertas</a>
                    </li>
					<li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Cerrar sesion</a>
                    </li>
                </ul>
                {% if app.user %}
			    Sessión iniciada como:
			    {{ app.user.email }}
	        	{% endif %}
            </div>
        </nav>
		{% endif %}
	{% if 'ROLE_ADMIN' in app.user.getroles(true)  %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">Linkolvin ADMIN</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="http://localhost:8080">Index</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('oferta_index') }}">Oferta</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('categoria_index') }}">Categorias</a>
                    </li>
					<li class="nav-item">
                        <a class="nav-link" href="{{ path('app_logout') }}">Cerrar sesion</a>
                    </li>
                </ul>
                {% if app.user %}
			    Sessión iniciada como:
			    {{ app.user.email }}
	        	{% endif %}
            </div>
        </nav>
		{% endif %}
	<h1>Tus ofertas</h1>

	<a href="{{ path('oferta_new') }}">Crear nueva oferta</a>
	<br>
	<br>
	<h2>Ofertas publicadas</h2>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Empresa</th>
				<th>Categoria</th>
				<th>Titol</th>
				<th>Descripcio</th>
				<th>DataPublicacio</th>
				<th>Ubicacio</th>
				<th>Estat</th>
				<th>Acciones</th>
			</tr>
		</thead>
		<tbody>
			{% set checker = '0' %}
			{% for ofertum in ofertas %}
				{% if ofertum.estat == 1 %}
					{% set checker = '1' %}
					<tr>
						<td>{{ ofertum.id }}</td>
						<td>{{ ofertum.empresa }}</td>
						<td>{{ ofertum.categoria}}</td>
						<td>{{ ofertum.titol }}</td>
						<td>{{ ofertum.descripcio }}</td>
						<td>{{ ofertum.dataPublicacio ? ofertum.dataPublicacio|date('Y-m-d') : '' }}</td>
						<td>{{ ofertum.ubicacio }}</td>
						<td>{{ ofertum.estat }}</td>
						<td>
							<a href="{{ path('oferta_show', {'id': ofertum.id}) }}">Ver</a>
							<a href="{{ path('oferta_edit', {'id': ofertum.id}) }}">Editar</a>
						</td>
					</tr>
				{% endif %}
			{% endfor %}
			{% if checker == 0 %}
				<tr>
					<td colspan="7">No hay registros que mostrar</td>
				</tr>
			{% endif %}
		</tbody>
	</tbody>
</table>
<br>

<h2>Ofertas pendientes de publicacion</h2>
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Empresa</th>
			<th>Categoria</th>
			<th>Titol</th>
			<th>Descripcio</th>
			<th>DataPublicacio</th>
			<th>Ubicacio</th>
			<th>Estat</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
		{% set checker = '0' %}
		{% for ofertum in ofertas %}
			{% if ofertum.estat == 0 %}
				{% set checker = '1' %}
				<tr>
					<td>{{ ofertum.id }}</td>
					<td>{{ ofertum.empresa }}</td>
					<td>{{ ofertum.categoria}}</td>
					<td>{{ ofertum.titol }}</td>
					<td>{{ ofertum.descripcio }}</td>
					<td>{{ ofertum.dataPublicacio ? ofertum.dataPublicacio|date('Y-m-d') : '' }}</td>
					<td>{{ ofertum.ubicacio }}</td>
					<td>{{ ofertum.estat }}</td>
					<td>
						<a href="{{ path('oferta_show', {'id': ofertum.id}) }}">Ver</a>
						{% if 'ROLE_ADMIN' in app.user.getroles(true) %}
							<a href="{{ path('oferta_aprove', {'id': ofertum.id}) }}">Aprovar</a>
							<a href="{{ path('oferta_denegate', {'id': ofertum.id}) }}">Denegar</a>
						{% endif %}
					</td>
				</tr>
			{% endif %}
		{% endfor %}
		{% if checker == 0 %}
			<tr>
				<td colspan="7">No hay registros que mostrar</td>
			</tr>
		{% endif %}
	</tbody>
</table>
<br>

<h2>Ofertas caducadas</h2>
<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Empresa</th>
			<th>Categoria</th>
			<th>Titol</th>
			<th>Descripcio</th>
			<th>DataPublicacio</th>
			<th>Ubicacio</th>
			<th>Estat</th>
			<th>Acciones</th>
		</tr>
	</thead>
	<tbody>
		{% set checker = '0' %}
		{% for ofertum in ofertas %}
			{% if (ofertum.dataPublicacio != null) and (ofertum.dataPublicacio|date("U") < "-90 days"|date("U")) %}
				{% set checker = '1' %}
				<tr>
					<td>{{ ofertum.id }}</td>
					<td>{{ ofertum.empresa }}</td>
					<td>{{ ofertum.categoria}}</td>
					<td>{{ ofertum.titol }}</td>
					<td>{{ ofertum.descripcio }}</td>
					<td>{{ ofertum.dataPublicacio ? ofertum.dataPublicacio|date('Y-m-d') : '' }}</td>
					<td>{{ ofertum.ubicacio }}</td>
					<td>{{ ofertum.estat }}</td>
					<td>
						<a href="{{ path('oferta_show', {'id': ofertum.id}) }}">Ver</a>
						<a href="{{ path('oferta_edit', {'id': ofertum.id}) }}">Editar</a>
					</td>
				</tr>
			{% endif %}
		{% endfor %}
		{% if checker == 0 %}
			<tr>
				<td colspan="7">No hay registros que mostrar</td>
			</tr>
		{% endif %}

	</tbody>
</table>
<br>
<a href="{{ path('index') }}">Volver</a>{% endblock %}
